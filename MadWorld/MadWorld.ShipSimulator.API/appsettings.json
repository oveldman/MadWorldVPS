{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Using": [ "Serilog.Sinks.Seq", "Serilog.Exceptions", "Serilog.Enrichers.ClientInfo" ],
    "Enrich": [ "WithExceptionDetails", "WithClientIp" ],
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq-loadbalancer:5341"
        }
      }
    ],
    "Properties": {
      "Application": "MadWorld.ShipSimulator.API"
    }
  },
  "AllowedHosts": "*"
}
